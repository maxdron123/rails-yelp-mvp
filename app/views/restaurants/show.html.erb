<div class="container">
<h1><%= @restaurant.name %></h1>
<h3>Info</h3>
<p>Address:<%= @restaurant.address %></p>
<p>Phone number:<%= @restaurant.phone_number %></p>
<p>Category:<%= @restaurant.category %></p>
<%= link_to "Back to list", restaurants_path, class:"btn, btn-primary" %>
<%= link_to "Edit info", edit_restaurant_path(@restaurant), class:"btn, btn-primary" %>
<%= link_to "Delete restaurant", restaurant_path(@restaurant), class:"btn, btn-danger",
data: { turbo_method: :delete, turbo_confirm: "Delete #{@restaurant.name}?" } %>
</div>
